{
	std::cout << "\t:)\\____/(:\n";
	std::cout << "\t  (@)v(@)\n";
	std::cout << "\t {|~- -~|}\n";
	std::cout << "\t {/^'^'^\\}\n";
	std::cout << "\t  ~~m-m~~\n\n\n";
}
